#!/usr/bin/env bash

export ORIGINAL_WD=`pwd`

pushd ${0%/*} > /dev/null
CLI_BIN="`pwd`/${0##*/}"
popd > /dev/null

source ${0%/*}/.init

NODE_VERSION=$(node -v)
NODE_VERSION=$(echo ${NODE_VERSION#*v} | cut -d. -f1)

FLAGS=""
if [ "$NODE_VERSION" = "7" ]; then
	FLAGS="--harmony-async-await"
fi

IN_CLI=true CLI_BIN="$CLI_BIN" exec babel-node $FLAGS boot/Cli.js "$@"
