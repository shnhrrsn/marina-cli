#!/usr/bin/env bash

source ${0%/*}/.init

strip_babel() {
	cp "$1" "$1-tmp"
	cat "$1-tmp" | sed 's/babel-node/node \-\-es_staging/g' > "$1"
	rm "$1-tmp"
}

echo "Cleaning up old build"
rm -fr lib

echo "Building"
mkdir -p lib lib/app lib/boot
babel -s inline -d lib/app/ app/ --copy-files
babel -s inline -d lib/boot/ boot/ --copy-files

echo "Done"
