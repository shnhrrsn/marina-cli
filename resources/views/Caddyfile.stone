@set(const domains, [ site.fqdn, ...site.fqAliases ])
#config:{!! site.stringify() !!}

{!! domains.map(domain => `http://${domain}`).join(',\n') !!} {
	proxy / {{ site.source }} {
		transparent
		websocket
		fail_timeout 0s
	}
}

